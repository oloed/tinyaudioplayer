    <image
          commandId="de.fips.plugin.tinyaudioplayer.play"
          disabledIcon="icons/16px-start-disabled.png"
          icon="icons/16px-start.png"></image>
    <image
          commandId="de.fips.plugin.tinyaudioplayer.pause"
